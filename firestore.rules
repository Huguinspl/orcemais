rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função helper para verificar se o usuário é o dono
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Regras para usuários (dados pessoais)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Regras para dados de negócio (documento principal)
    match /business/{userId} {
      // Permite leitura pública (necessário para links compartilhados)
      allow read: if true;
      allow write: if isOwner(userId);
      
      // Regras específicas para orçamentos - permite atualização de status
      match /orcamentos/{orcamentoId} {
        // Permite leitura pública (para links compartilhados)
        allow read: if true;
        // Permite ao dono fazer qualquer operação
        allow create, delete: if isOwner(userId);
        // Permite atualização completa pelo dono ou apenas status por qualquer pessoa
        allow update: if isOwner(userId) || 
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      }
      
      // Outras subcoleções de business (recibos, clientes, etc)
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Regras para transações financeiras (receitas e despesas)
    match /transacoes/{transacaoId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Regras para coleção de usuários (com subcoleções)
    match /usuarios/{userId} {
      allow read, write: if isOwner(userId);
      
      // Subcoleção de checklists
      match /checklists/{checklistId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Nega acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
