rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Função helper para verificar autenticação
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Função helper para verificar se o usuário é o dono
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // ✅ Coleção pública para documentos compartilhados (orçamentos/recibos)
    // Leitura pública para carregamento rápido no link web
    match /shared_documents/{documentId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Regras para usuários (dados pessoais)
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Regras para tokens de notificação push
    match /usuarios/{userId} {
      allow read, write: if isOwner(userId);
      
      match /pushTokens/{platform} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Regras para dados de negócio (documento principal)
    match /business/{userId} {
      // Permite leitura pública (necessário para links compartilhados)
      allow read: if true;
      allow write: if isOwner(userId);
      
      // Regras específicas para orçamentos - permite atualização de status
      match /orcamentos/{orcamentoId} {
        // Permite leitura pública (para links compartilhados)
        allow read: if true;
        // Permite ao dono fazer qualquer operação
        allow create, delete: if isOwner(userId);
        // Permite atualização completa pelo dono ou apenas status por qualquer pessoa
        allow update: if isOwner(userId) || 
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status']);
      }
      
      // Regras específicas para recibos - permite leitura pública
      match /recibos/{reciboId} {
        // Permite leitura pública (para links compartilhados)
        allow read: if true;
        // Permite ao dono fazer qualquer operação
        allow create, delete: if isOwner(userId);
        // Permite atualização pelo dono
        allow update: if isOwner(userId);
      }
      
      // Outras subcoleções de business (clientes, etc)
      match /{subcollection}/{docId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Regras para transações financeiras (receitas e despesas)
    match /transacoes/{transacaoId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Regras para coleção de usuários (com subcoleções)
    match /usuarios/{userId} {
      allow read, write: if isOwner(userId);
      
      // Subcoleção de checklists
      match /checklists/{checklistId} {
        allow read, write: if isOwner(userId);
      }
      
      // Subcoleção de chat - permite leitura/escrita para o dono e admin
      match /chat/{chatId} {
        allow read, write: if isOwner(userId) || request.auth.uid == 'tdB0QRkOfiMfRQAMykXjasZbIXq2';
      }
    }
    
    // Regras para coleção de lojas (dados do negócio/usuário)
    match /lojas/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Regras para configurações do admin (horário atendimento, etc)
    match /adm/{document} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == 'tdB0QRkOfiMfRQAMykXjasZbIXq2';
    }
    
    // Nega acesso a qualquer outro documento
    match /{document=**} {
      allow read, write: if false;
    }

    // O usuario administrador pode tudo
    match /{document=**} {
      allow read, write, delete, update:
      	if request.auth.uid == 'tdB0QRkOfiMfRQAMykXjasZbIXq2';
    }

    // Regras de chat usuario
    match /chat/{document=**} {
    	allow read, update, create:
      	if request.auth != null;
    }
  }
}
